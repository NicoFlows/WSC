{
  "name": "wsc",
  "version": "0.1.0",
  "description": "World State Chronicler - Continuity and memory framework for games",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "npx tsx tests/run-tests.ts",
    "test:verbose": "npx tsx tests/run-tests.ts --verbose",
    "test:chronicle": "npx tsx tests/scripts/chronicle.test.ts",
    "test:entities": "npx tsx tests/scripts/entities.test.ts",
    "test:world": "npx tsx tests/scripts/world-state.test.ts",
    "test:victory": "npx tsx tests/scripts/victory.test.ts",
    "entity:validate": "npx tsx .claude/skills/wsc-entities/scripts/validate.ts",
    "entity:query": "npx tsx .claude/skills/wsc-entities/scripts/query.ts",
    "entity:create": "npx tsx .claude/skills/wsc-entities/scripts/create.ts",
    "chronicle:emit": "npx tsx .claude/skills/wsc-chronicle/scripts/emit.ts",
    "chronicle:query": "npx tsx .claude/skills/wsc-chronicle/scripts/query.ts",
    "world:init": "npx tsx .claude/skills/wsc-world-state/scripts/init.ts",
    "world:tick": "npx tsx .claude/skills/wsc-world-state/scripts/tick.ts",
    "world:status": "npx tsx .claude/skills/wsc-world-state/scripts/status.ts",
    "world:check-victory": "npx tsx .claude/skills/wsc-world-state/scripts/check-victory.ts",
    "effects:apply": "npx tsx .claude/skills/wsc-effects/scripts/apply.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.0"
  }
}
