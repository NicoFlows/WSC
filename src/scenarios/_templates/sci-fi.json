{
  "$comment": "Sci-Fi Scenario Template - Copy and customize for your scenario",

  "id": "{{scenario_id}}",
  "name": "{{Scenario Name}}",
  "version": "1.0.0",

  "setting": {
    "genre": "sci-fi",
    "era": "{{Era description, e.g., 'Year 3042, Post-Collapse Era'}}",
    "theme": "{{Core thematic conflict}}",
    "tone": "{{Tone: gritty realism, space opera, hard sci-fi, etc.}}",
    "inspirations": ["{{Inspiration 1}}", "{{Inspiration 2}}"]
  },

  "lore_summary": "{{2-3 sentences describing the world and current situation}}",

  "starting_state": {
    "tick": 1000,
    "tick_unit": "day",
    "calendar_reference": "{{How to translate ticks to dates}}",
    "situation": "{{Current state of affairs}}"
  },

  "factions": {
    "polity.{{faction1_id}}": {
      "role": "{{antagonist_empire | protagonist_underdogs | neutral_power}}",
      "starting_regions": ["region.{{home_region}}"],
      "contested_regions": ["region.{{contested}}"],
      "objectives": ["{{Goal 1}}", "{{Goal 2}}"]
    },
    "polity.{{faction2_id}}": {
      "role": "{{role}}",
      "starting_regions": [],
      "contested_regions": ["region.{{contested}}"],
      "objectives": ["{{Goal 1}}", "{{Goal 2}}"]
    }
  },

  "key_characters": {
    "agent.{{protagonist_id}}": {
      "role": "protagonist",
      "arc": "{{Character arc description}}",
      "narrative_weight": 1.0
    },
    "agent.{{antagonist_id}}": {
      "role": "antagonist",
      "arc": "{{Character arc description}}",
      "narrative_weight": 0.9
    }
  },

  "victory_conditions": {
    "{{faction1}}_victory": {
      "description": "{{How faction1 wins}}",
      "condition": "presence.{{faction1}}.{{region}}.influence >= 0.9 AND presence.{{faction1}}.{{region}}.control == true"
    },
    "{{faction2}}_victory": {
      "description": "{{How faction2 wins}}",
      "condition": "presence.{{faction1}}.{{region}}.influence < 0.3"
    },
    "stalemate": {
      "description": "Prolonged conflict with no resolution",
      "condition": "tick > 2000"
    }
  },

  "narrative_hooks": [
    {
      "id": "{{hook_id}}",
      "description": "{{Secret or plot hook}}",
      "known_to": [],
      "reveal_conditions": ["{{When this might come to light}}"]
    }
  ],

  "suggested_drilldowns": [
    {
      "type": "party-rpg",
      "description": "{{Scene description}}",
      "participants": ["agent.{{id1}}", "agent.{{id2}}"],
      "location": "locale.{{location}}"
    },
    {
      "type": "action-sim",
      "description": "{{Combat/action description}}",
      "participants": ["force.{{id1}}", "force.{{id2}}"],
      "location": "region.{{location}}"
    }
  ],

  "entities": {
    "polities": ["polity.{{faction1_id}}", "polity.{{faction2_id}}"],
    "regions": ["region.{{main_region}}"],
    "forces": ["force.{{force1}}", "force.{{force2}}"],
    "locales": ["locale.{{locale1}}"],
    "agents": ["agent.{{protagonist_id}}", "agent.{{antagonist_id}}"],
    "holdings": []
  },

  "_location_hierarchy_guide": {
    "sci-fi_scales": [
      "galaxy - The entire galaxy or galactic region",
      "sector - A sector/quadrant of space",
      "system - A star system with planets",
      "body - A planet, moon, station, or asteroid",
      "locale - A city, station, or major installation",
      "site - A district, building, or zone",
      "room - A specific room or area"
    ],
    "example_hierarchy": [
      "location.galaxy.milky_way",
      "  └── location.sector.outer_rim",
      "        └── location.system.kepler",
      "              └── location.body.kepler_prime",
      "                    └── location.locale.new_tokyo",
      "                          └── location.site.spaceport",
      "                                └── location.room.hangar_7"
    ]
  }
}
