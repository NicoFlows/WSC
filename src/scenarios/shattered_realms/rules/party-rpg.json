        "quarterstaff": { "damage": "1d6 bludgeoning", "properties": ["versatile"] },
        "shortbow": { "damage": "1d6 piercing", "properties": ["ranged", "80/320"] }
      },
      "martial": {
        "longsword": { "damage": "1d8 slashing", "properties": ["versatile"] },
        "battleaxe": { "damage": "1d8 slashing", "properties": ["versatile"] },
        "longbow": { "damage": "1d8 piercing", "properties": ["ranged", "150/600", "heavy"] },
        "greatsword": { "damage": "2d6 slashing", "properties": ["heavy", "two-handed"] }
      },
      "special": {
        "void_touched_blade": { "damage": "1d8 + 1d4 void", "properties": ["corruption_1_per_kill"] },
        "blessed_weapon": { "damage": "1d8 + 1d6 vs void", "properties": ["requires_divine_favor"] }
      }
    },
    "armor": {
      "light": {
        "leather": { "ac": 11, "dex_bonus": "full", "stealth": "normal" },
