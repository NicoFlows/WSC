    "magical_items": {
      "potions": {
        "healing": "2d4+2 HP",
        "greater_healing": "4d4+4 HP",
        "void_resistance": "Advantage on void saves for 1 hour",
        "mana_restoration": "Restore 2d6 mana"
      },
      "scrolls": "Single-use spell, must meet casting requirements",
      "artifacts": "Unique items with powerful effects and drawbacks"
    }
  },

